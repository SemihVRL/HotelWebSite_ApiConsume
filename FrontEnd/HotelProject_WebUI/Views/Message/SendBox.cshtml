@model List<SendBoxListDto>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Views/Shared/Admin/AdminLayout.cshtml";
}

<div class="email-left-box">
    <a href="/Message/StaffSendMessage" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
    @await Html.PartialAsync("SidebarContactPartial");
    <h5 class="mt-5 m-b-10">Kategoriler</h5>
    @await Html.PartialAsync("SidebarContactCategoryPartial");
</div>
<div class="email-right-box">
    <div role="toolbar" class="toolbar">
        <div class="btn-group">
            <button aria-expanded="false" data-toggle="dropdown" class="btn btn-dark dropdown-toggle" type="button">
                Gönderilen Mesajlar <span class="caret m-l-5"></span>
            </button>

        </div>
    </div>
    <div class="email-list m-t-15">
        @foreach (var x in Model)
        {
            <div class="message">
                <a href="/Message/MessageDetail/@x.SendMessageID">
                    <div class="col-mail col-mail-1">
                        <div class="email-checkbox">
                            <input type="checkbox" id="chk2">
                            <label class="toggle" for="chk2"></label>
                        </div><span class="star-toggle ti-star"></span>
                    </div>
                    <div class="col-mail col-mail-2">
                        <div class="subject"><b> Konu:@x.Title</b> Alıcı : @x.ReceiverName</div>
                        <div class="date">@x.Date.ToString("HH:mm")</div>
                    </div>
                </a>
            </div>
        }
    </div>
    <!-- panel -->

</div>






